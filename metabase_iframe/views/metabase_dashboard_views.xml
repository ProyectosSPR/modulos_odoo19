<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_metabase_dashboard_list" model="ir.ui.view">
        <field name="name">metabase.dashboard.list</field>
        <field name="model">metabase.dashboard</field>
        <field name="arch" type="xml">
            <list string="Metabase Dashboards">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="iframe_url"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_metabase_dashboard_form" model="ir.ui.view">
        <field name="name">metabase.dashboard.form</field>
        <field name="model">metabase.dashboard</field>
        <field name="arch" type="xml">
            <form string="Metabase Dashboard">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Sales Dashboard"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="height"/>
                        </group>
                        <group>
                            <field name="menu_id" readonly="1"/>
                            <field name="action_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="iframe_url"
                               placeholder="https://metabase.example.com/public/dashboard/..."/>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of this dashboard..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_metabase_dashboard" model="ir.actions.act_window">
        <field name="name">Metabase Dashboards</field>
        <field name="res_model">metabase.dashboard</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Metabase Dashboard
            </p>
            <p>
                Add Metabase dashboard URLs to embed them in Odoo.
                Menu items will be created automatically.
            </p>
        </field>
    </record>
</odoo>
